<configuration>
	<appender name="SIFT" class="ch.qos.logback.classic.sift.SiftingAppender">
		<!-- in the absence of the class attribute, it is assumed that the desired discriminator type is ch.qos.logback.classic.sift.MDCBasedDiscriminator -->
		<discriminator>
			<key>filename</key>
			<defaultValue>unknown</defaultValue>
		</discriminator>
		<sift>
			<appender name="FILE-${filename}" class="ch.qos.logback.core.FileAppender">
				<file>./logs/${filename}.log</file>
				<append>false</append>
				<layout class="ch.qos.logback.classic.PatternLayout">
					<pattern>%d [%thread] %level %logger{35} - %msg%n</pattern>
				</layout>
			</appender>
		</sift>
	</appender>

	<root level="DEBUG">
		<appender-ref ref="SIFT" />
	</root>
</configuration>